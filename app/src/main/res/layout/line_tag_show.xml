<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selector">
    <!--android:background="@color/colorPrimaryDark"    -->

    <ImageView
        android:id="@+id/imageviewSymbol"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageviewSymbol"
        android:id="@+id/textviewTagValue"
        android:text="Tag Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#E1F5FE"
        android:text="name of action"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_below="@+id/textviewTagValue"
        android:layout_toRightOf="@+id/imageviewSymbol"
        android:id="@+id/textviewTagType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textviewTagValue"
        android:textColor="#FFF"
        android:text="Date Time"
        android:id="@+id/textviewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>